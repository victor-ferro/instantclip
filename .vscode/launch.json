{
    "version": "1.0.0",
    "configurations": [
        {
            "name": "Nest Service",
            //"runtimeVersion": "16.0.0",
            "runtimeArgs": ["start"], // npm run start --> Este es el comando que nest da por defecto para lanzar el servicio
            "request": "launch",
            "runtimeExecutable": "npm",
            "type": "node",
            "skipFiles": ["<node_internals>/**"],
        },
        {
            "name": "Watch",
            //"runtimeVersion": "16.0.0",
            "runtimeArgs": ["start", "dev"], // npm run start:dev
            "request": "launch",
            "runtimeExecutable": "npm",
            "type": "node",
            "skipFiles": ["<node_internals>/**"],
        }
    ]
}